<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/receiver_super_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp">
        <LinearLayout
            android:id="@+id/receiver_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="254sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9sp"
            android:orientation="vertical"
            android:background="@drawable/receiver">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/receiver_chat_image_name"
                    android:layout_gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:hint="@string/nameHint"
                    android:paddingStart="8dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
                <TextView
                    android:id="@+id/receiver_chat_image_time"
                    android:layout_gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:fontFamily="sans-serif"
                    android:hint="@string/timeHint"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/receiver_chat_image"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/logo"
                android:layout_marginStart="3dp"
                android:contentDescription="@string/imageContentDesc" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/receiver_text_layout"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:minWidth="200sp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/receiver_image_layout"
            android:background="@drawable/receiver">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/receiver_chat_text_name"
                    android:layout_gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:fontFamily="sans-serif"
                    android:paddingTop="3dp"
                    android:hint="@string/nameHint"
                    android:paddingStart="8dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
                <TextView
                    android:id="@+id/receiver_chat_text_time"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:fontFamily="sans-serif"
                    android:hint="@string/timeHint"/>
            </LinearLayout>
            <TextView
                android:id="@+id/receiver_chat_text"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/messageHint"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sender_super_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/sender_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="254sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/sender">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sender_chat_image_time"
                    android:layout_gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingTop="5dp"
                    android:fontFamily="sans-serif"
                    android:hint="@string/timeHint"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/sender_chat_image"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/logo"
                android:layout_marginStart="3dp"
                android:contentDescription="@string/imageContentDesc" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/sender_text_layout"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:minWidth="200sp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/sender_image_layout"
            android:background="@drawable/sender">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sender_chat_text_time"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="13dp"
                    android:paddingTop="3dp"
                    android:fontFamily="sans-serif"
                    android:hint="@string/timeHint"/>
            </LinearLayout>
            <TextView
                android:id="@+id/sender_chat_text"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/messageHint"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>